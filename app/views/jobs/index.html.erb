<table class="table table-hover">
  <thead>
    <tr>
        <th colspan='2' style="text-align:left">
          <%= form_tag jobs_path, :method => 'get'  do %>
           Job Title<%= text_field_tag :title, params[:title]%><br/>
           Job Location<%= text_field_tag :location, params[:location]%><br/>
           <%= submit_tag "搜尋" %>
          <% end %>
        </th>
        <th colspan='2' style="text-align:right"><%= link_to 'Post a new job', new_job_path,class:'btn btn-success' %></th>
    </tr>
    <tr>
      <th>Posted</th>
      <th>Job Title</th>
      <th>Company Name</th>
      <th>Location</th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= link_to job.title, job %></td>        
        <td><%= job.company_name %></td>
        <td><%= job.location %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @jobs,:theme => 'twitter-bootstrap-3' %>
